@model WykopClone.Models.AddThread

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-light text-center">Dodaj Znalezisko</h1>



    <div id="container" class="row text-light col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="Category" asp-items="Html.GetEnumSelectList<Thread.CategoryType>()" class="form-select" aria-required="true">
                    <option disaled selected>Select Role</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
<style>
    .form-control, .form-select {
        background-color:dimgray;
        color:white;
    }

    .form-floating{
        margin-top:1.5rem;
    }
</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

